<h1>New Game</h1>
<p>This is your regular message</p>

<div class="container">
<ol class="letters">
  <% @letters.each do |letter| %>
    <%= letter %>
  <% end %>
</ol>
</div>


<div class="answer">
  <form action="/score" method="get" class="">
    <div class="input-group sm-3">
      <!-- <label for="try">your best shot</label> -->
      <input type="text" class="form-control input" name="your_try" id="try" placeholder="Your best shot">
      <button type="submit" class="btn btn-outline-secondary">Play</button>
    </div>
 <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
